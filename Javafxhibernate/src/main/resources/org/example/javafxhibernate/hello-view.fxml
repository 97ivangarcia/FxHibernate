<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafxhibernate.HelloController" stylesheets="@../../../css/styles.css">
    <!-- Título -->
    <Label text="Gestión de Biblioteca" style="-fx-font-size: 20px; -fx-font-weight: bold;" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" />

    <!-- Sección de Autores -->
    <VBox spacing="20" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="70" AnchorPane.rightAnchor="10">
        <HBox spacing="10">
            <TextField fx:id="tfNombreAutor" promptText="Nombre del Autor" />
            <TextField fx:id="tfNacionalidadAutor" promptText="Nacionalidad" />
            <Button fx:id="btnAgregarAutor" text="Agregar" />
            <Button fx:id="btnModificarAutor" text="Modificar" />
            <Button fx:id="btnEliminarAutor" text="Eliminar" />
            <Button fx:id="btnBuscarAutor" text="Buscar" />
        </HBox>
        <TextArea fx:id="textAreaResultados" prefHeight="150" prefWidth="400" editable="false" wrapText="true" />
    </VBox>

    <!-- Sección de Libros -->
    <VBox spacing="20" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="300" AnchorPane.rightAnchor="10">
        <HBox spacing="10">
            <TextField fx:id="tfTituloLibro" promptText="Título del Libro" />
            <TextField fx:id="tfISBNLibro" promptText="ISBN del Libro" />
            <TextField fx:id="tfAutorLibro" promptText="Autor del Libro" />
            <TextField fx:id="tfEditorialLibro" promptText="Editorial del Libro" />
            <TextField fx:id="tfAnioPublicacionLibro" promptText="Año de Publicación" />
            <Button fx:id="btnAgregarLibro" text="Agregar" />
            <Button fx:id="btnModificarLibro" text="Modificar" />
            <Button fx:id="btnEliminarLibro" text="Eliminar" />
            <Button fx:id="btnBuscarLibro" text="Buscar" />
        </HBox>
    </VBox>

    <!-- Sección de Socios -->
    <VBox spacing="20" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="450" AnchorPane.rightAnchor="10">
        <HBox spacing="10">
            <TextField fx:id="tfNombreSocio" promptText="Nombre del Socio" />
            <TextField fx:id="tfDireccionSocio" promptText="Dirección" />
            <TextField fx:id="tfTelefonoSocio" promptText="Teléfono" />
            <Button fx:id="btnAgregarSocio" text="Agregar" />
            <Button fx:id="btnModificarSocio" text="Modificar" />
            <Button fx:id="btnEliminarSocio" text="Eliminar" />
            <Button fx:id="btnBuscarSocio" text="Buscar" />
        </HBox>
    </VBox>


    <!-- Sección de Préstamos -->
    <VBox spacing="20" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="650" AnchorPane.rightAnchor="10">
        <HBox spacing="10">
            <Button fx:id="btnRealizarPrestamo" text="Realizar Préstamo" />
            <Button fx:id="btnVerPrestamos" text="Ver Préstamos Activos" />
        </HBox>
    </VBox>
</AnchorPane>
